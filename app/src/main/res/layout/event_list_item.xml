<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivRouteEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btParticipate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:alpha="0.5"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvTitleEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/btParticipate"
        app:layout_constraintStart_toEndOf="@+id/ivRouteEvent"
        app:layout_constraintTop_toBottomOf="@+id/tvDateEvent"
        tools:text="Title" />

    <TextView
        android:id="@+id/tvDateEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/ivRouteEvent"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent"
        tools:text="Date event" />

    <Button
        android:id="@+id/btParticipate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/custom_button"
        android:minHeight="30dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:text="@string/participer"
        android:textColor="@drawable/text_color_button"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_one_event"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:src="@drawable/ic_profile_avatar"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorGreyLight"
        app:layout_constraintBottom_toTopOf="@+id/tvStaff"
        app:layout_constraintEnd_toStartOf="@+id/profile_image_two_event"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_two_event"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:clickable="true"
        android:src="@drawable/ic_profile_avatar"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorGreyLight"
        app:layout_constraintBottom_toTopOf="@+id/tvStaff"
        app:layout_constraintEnd_toStartOf="@+id/profile_image_three_event"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent" />

    <TextView
        android:id="@+id/tvMoreEvent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvStaff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent"
        tools:text="+2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_three_event"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/tvStaff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivTitleEvent" />

    <ImageView
        android:id="@+id/ivTitleEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ivRouteEvent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/tvStaff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:text="@string/see_staff"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/btParticipate"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="@+id/ivTitleEvent"
        app:layout_constraintTop_toTopOf="@+id/ivTitleEvent"
        app:srcCompat="@drawable/information" />

    <ImageButton
        android:id="@+id/imgBtEditEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivTitleEvent"
        app:layout_constraintStart_toStartOf="@+id/ivTitleEvent"
        app:srcCompat="@drawable/icon_edit" />

</androidx.constraintlayout.widget.ConstraintLayout>