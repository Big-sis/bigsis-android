<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivTripImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        android:layout_centerVertical="true"
        app:civ_circle_background_color="@color/colorGreyLight"/>


    <TextView
        android:id="@+id/tvDateTrip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/ivTripImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        tools:text="Date" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/tvDateTrip"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_one"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:src="@drawable/ic_profile"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorGreyLight" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_two"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity=""
            android:clickable="true"
            android:src="@drawable/ic_profile"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorGreyLight" />

        <TextView
            android:id="@+id/tvMore"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="+2" />
    </LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDateTrip"
        android:layout_centerVertical="true"
        android:src="@drawable/itinarary"
        android:layout_toEndOf="@+id/ivTripImage"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:id="@+id/linearLayoutTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_below="@+id/tvDateTrip"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/imageline">

        <TextView
            android:id="@+id/tvTripsFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxWidth="150dp"
            android:singleLine="false"
            tools:text="From" />

        <TextView
            android:id="@+id/tvTripsTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxWidth="200dp"
            android:singleLine="false"
            tools:text="To" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTv"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btParticipate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:minHeight="30dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/participer"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color_button" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/linearLayoutButton"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:alpha="0.5"
        android:background="@color/colorAccent" />

</RelativeLayout>

</LinearLayout>