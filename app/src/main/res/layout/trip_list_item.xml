<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayoutDateTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivTripImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            tools:srcCompat="@drawable/ic_walker_selected" />

        <TextView
            android:id="@+id/tvDateTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Date" />

            <TextView
                android:id="@+id/numberOfPlacesTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_one"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/colorGreyLight" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_two"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/colorGreyLight" />

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="+2" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_three"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            android:gravity="center"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorPrimary" />

        <LinearLayout
            android:id="@+id/linearLayoutTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutDateTrip"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_trip_itinirary" />

            <LinearLayout
                android:id="@+id/linearLayoutTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTripsFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:maxWidth="150dp"
                    android:singleLine="false"
                    android:textSize="15sp"
                    tools:text="From" />

                <TextView
                    android:id="@+id/tvTripsTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:maxWidth="150dp"
                    android:singleLine="false"
                    android:textSize="15sp"
                    tools:text="To" />
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/btItinerary"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_three"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_button"
            android:minHeight="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/show_itinerary"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color_button" />

        <Button
            android:id="@+id/btParticipate"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btItinerary"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/custom_button"
            android:minHeight="20dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text="@string/participer"
            android:textAllCaps="false"
            android:textColor="@drawable/text_color_button" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayoutTv"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:alpha="0.5"
            android:background="@color/colorAccent" />

    </RelativeLayout>

</LinearLayout>