<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MapsActivity">

     <fr.bigsis.android.view.CurvedBottomNavigationView
        android:id="@+id/customBottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        mapbox:mapbox_cameraZoom="16">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraitLayoutMaps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorGreyTransparent"
        android:visibility="gone"/>
    </com.mapbox.mapboxsdk.maps.MapView>

    <FrameLayout
        android:id="@+id/fragment_container_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imgBtRecenter"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/fragment_container_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgBtRecenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/colorWhite"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        mapbox:srcCompat="@drawable/ic_localisation" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgBtItinarary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/imgBtRecenter"
        app:layout_constraintEnd_toEndOf="parent"
        mapbox:srcCompat="@drawable/ic_split" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/imgBtPositionAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/colorWhite"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toTopOf="@+id/imgBtRecenter"
        app:layout_constraintEnd_toEndOf="parent"
        mapbox:srcCompat="@drawable/ic_target" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        android:scaleType="fitXY"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customBottomBar"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ic_alert_green" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbAlertRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorRed"
        android:scaleType="fitXY"
        app:fabSize="normal"
        app:layout_constraintBottom_toTopOf="@+id/customBottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/customBottomBar"
        app:maxImageSize="50dp"
        app:srcCompat="@drawable/ic_alert_map" />
    <TextView
        android:id="@+id/tvOpenItinerary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_advice_design"
        android:alpha="0.85"
        android:text="@string/where_are_you_going"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:paddingStart="18dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/containner_alert_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>