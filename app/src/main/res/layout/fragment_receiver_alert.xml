<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ReceiverAlertFragment">

    <LinearLayout
        android:id="@+id/linearLayoutTVAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageProfileUser"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-35dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:background="@drawable/custom_fragment_alert">



        <TextView
            android:id="@+id/usernameAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/sent_alert"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dateTimeOfAlert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/nbrPeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btImGoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/bt_alert_design"
            android:layout_gravity="center_horizontal"
            android:minHeight="30dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="@string/going"
            android:textColor="@color/colorWhite" />
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageProfileUser"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/ic_friends_round"
        app:civ_border_color="@color/colorWhite"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="@color/colorAccent" />

    <ImageButton
        android:id="@+id/closereceiverALert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/linearLayoutTVAlert"
        android:layout_alignEnd="@+id/linearLayoutTVAlert"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_cancel" />

    <RelativeLayout
        android:id="@+id/rvProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:layout_below="@+id/imageProfileUser"
        android:layout_alignStart="@+id/linearLayoutTVAlert"
        android:layout_alignEnd="@+id/linearLayoutTVAlert"
        android:layout_alignBottom="@+id/linearLayoutTVAlert"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>