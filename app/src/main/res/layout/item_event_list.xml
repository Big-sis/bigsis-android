<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayoutEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/eventImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:background="@color/colorGreyLight"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/smile_logo" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/infoEventButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/eventImage"
            android:layout_alignEnd="@+id/eventImage"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorWhite"
            android:src="@drawable/ic_information"
            app:backgroundTint="@color/colorGreyLight"
            app:fabSize="mini" />

        <ImageButton
            android:id="@+id/imageButtonImageEventItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/eventImage"
            android:layout_alignBottom="@id/eventImage"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/ic_add_image_event"
            android:visibility="gone" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutEventText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/relativeLayoutEvent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="0dp"
        android:background="@color/colorWhite"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvInformations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorWhite"
            android:text="@string/information"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDesctiptionEvent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvInformations"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:adjustViewBounds="true"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:textSize="16sp" />
        <ImageButton
            android:id="@+id/imgBtCancelInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/colorWhite"
            android:src="@drawable/ic_cancel"
            app:backgroundTint="@color/colorWhite" />
    </RelativeLayout>
</RelativeLayout>



    <RelativeLayout
        android:id="@+id/layoutItemEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleEventItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Title" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_one_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/colorGreyLight" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image_two_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity=""
                android:clickable="true"
                android:src="@drawable/ic_profile"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/colorGreyLight" />

            <TextView
                android:id="@+id/tvMore_event"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:clickable="true"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="+2" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_three_event"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:clickable="true"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/colorPrimary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textViewDateEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            tools:text="Date" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvShowStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:text="Voir staff ..." />
    </RelativeLayout>

    <Button
        android:id="@+id/btParticipateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/custom_button"
        android:minHeight="30dp"
        android:text="@string/participer"
        android:layout_marginBottom="10dp"
        android:textColor="@drawable/text_color_button" />
</LinearLayout>